---
/**
 * TopBar.astro
 * ============
 * Replaces the runtime fetch of /assets/components/top-bar-and-setting.html
 * This HTML is now baked into every page at build time â€” zero fetch overhead.
 */
---

<div class="top-nav">
  <div class="toggle-btn-container">
    <button
      aria-label="open-close-button"
      class="toggle-btn"
      onclick="toggleNav()"
    >
      <div class="bar"></div>
      <div class="bar"></div>
      <div class="bar"></div>
    </button>
  </div>

  <div class="left">
    <a href="/" class="top-buttons" id="Home-button">Home</a>
    <a href="/about" class="top-buttons" id="About-button">About</a>
    <a href="/notes" class="top-buttons" id="Note-button">Notes</a>
    <a href="/recommended-materials" class="top-buttons" id="Material-button"
      >Resources</a
    >
    <a href="/tags" class="top-buttons" id="Archive-button">Archive</a>
    <a
      href="https://www.ddonle.com"
      target="_blank"
      class="top-buttons"
      id="Contact-button">Contact</a
    >
  </div>

  <div class="right">
    <div class="search-bar-container" id="searchBarContainer">
      <input
        id="searchBar"
        autocomplete="off"
        class="search-bar"
        placeholder="Type / to search"
      />
      <input
        id="searchBarMobile"
        autocomplete="off"
        class="search-bar-mobile"
        placeholder="Search here"
      />
      <div class="autocomplete-dropdown" id="autocomplete-dropdown"></div>
      <div class="search-overlay" id="searchOverlay"></div>
    </div>

    <div class="buttons-container">
      <abbr title="RSS" class="rss">
        <a aria-label="rss" href="/rss/feed.xml">
          <i class="fa-solid fa-rss"></i>
        </a>
      </abbr>
      <abbr
        title="dark/light mode"
        style="width:32px;display:flex;align-items:center;justify-content:center"
      >
        <button
          class="dark-mode-button"
          aria-label="dark-mode-button"
          id="modeToggle"
        >
          <i class="fa-solid fa-moon" id="toggleIcon"></i>
        </button>
      </abbr>
      <abbr title="settings" class="setting-container">
        <input id="toggle" type="checkbox" />
        <label for="toggle" id="toggleButton">
          <div class="gear">
            <div class="center"></div>
            <div class="tooth"></div>
            <div class="tooth"></div>
            <div class="tooth"></div>
            <div class="tooth"></div>
          </div>
        </label>
        <div class="hidden" id="settings_window">
          <div style="font-size:20px;font-weight:700">Settings</div>
          <div
            style="margin-left:auto;margin-right:auto;background:#b4b4b4;height:.5px;display:block;width:100%;height:1px;margin-top:10px;margin-bottom:20px"
          >
          </div>
          <div class="settings_window-container">
            <div class="setting-window-right">
              <div class="sw_1st_column_items">Body Font</div>
              <div class="sw_1st_column_items">Font Size</div>
              <div class="sw_1st_column_items">Scroll Indicator</div>
              <div class="sw_1st_column_items">Code Theme (Light Mode)</div>
              <div class="sw_1st_column_items">Code Theme (Dark Mode)</div>
            </div>
            <div class="setting-window-right">
              <div class="custom-select">
                <select id="font-select">
                  <option value="Computer-Modern"
                    >Computer Modern, serif: Default</option
                  >
                  <option value="et-book">et book, palantino</option>
                  <option value="sans-serif">Arial, sans-serif</option>
                  <option value="Georgia">Georgia, serif</option>
                  <option value="Times New Roman">Times New Roman, serif</option
                  >
                  <option value="Verdana">Verdana, sans-serif</option>
                </select>
              </div>
              <div class="custom-select">
                <select id="font-size-select">
                  <option value="14px">Small (14px)</option>
                  <option value="15px">Low Medium (15px)</option>
                  <option value="16px">Medium: Default (16px)</option>
                  <option value="17px">High Medium (17px)</option>
                  <option value="18px">Large (18px)</option>
                  <option value="20px">Extra Large (20px)</option>
                  <option value="22px">Ultra Large (22px)</option>
                </select>
              </div>
              <div class="custom-select">
                <select id="indicator-select">
                  <option value="block">Show</option>
                  <option value="none">Hide</option>
                </select>
              </div>
              <div class="custom-select">
                <select id="light-theme-select">
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-vs.min.css"
                    >VS Min: Default</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-one-light.min.css"
                    >One Light</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism.min.css"
                    >Min</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-solarizedlight.min.css"
                    >Solarized Light</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-coldark-cold.min.css"
                    >Cold</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-duotone-light.min.css"
                    >Duotone Light</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-ghcolors.min.css"
                    >GH</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-material-light.min.css"
                    >Material Light</option
                  >
                </select>
              </div>
              <div class="custom-select">
                <select id="dark-theme-select">
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-vsc-dark-plus.min.css"
                    >Dark Plus: Default</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-atom-dark.min.css"
                    >Atom Dark</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-okaidia.min.css"
                    >Okaidia</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-tomorrow.min.css"
                    >Tomorrow</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-twilight.min.css"
                    >Twilight</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-darcula.min.css"
                    >Dracula</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-coldark-dark.min.css"
                    >Dark Cold</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-night-owl.min.css"
                    >Night Owl</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-gruvbox-dark.min.css"
                    >Gruvbox Dark</option
                  >
                  <option
                    value="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-one-dark.min.css"
                    >One Dark</option
                  >
                </select>
              </div>
            </div>
          </div>
        </div>
      </abbr>
    </div>
  </div>

  <button
    aria-label="social-media-button"
    class="share-button"
    onclick="toggleShareOptions(event)"
  >
    <i class="fa-solid fa-share-nodes" aria-hidden="true" id="share-expand"></i>
    <span class="share-tooltip">Share this page</span>
  </button>

  <div class="share-options" id="shareOptions">
    <abbr title="facebook">
      <button
        class="share-option"
        onclick='sharePage(event,"facebook")'
        id="share-facebook"
      >
        <i class="fa-brands fa-facebook" aria-hidden="true"></i>
      </button>
    </abbr>
    <abbr title="Twitter">
      <button
        class="share-option"
        onclick='sharePage(event,"twitter")'
        id="share-twitter"
      >
        <i class="fa-brands fa-x-twitter" aria-hidden="true"></i>
      </button>
    </abbr>
    <abbr title="Whatsapp">
      <button
        class="share-option"
        onclick='sharePage(event,"whatsapp")'
        id="share-whatsapp"
      >
        <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
      </button>
    </abbr>
    <abbr title="Reddit">
      <button
        class="share-option"
        onclick='sharePage(event,"reddit")'
        id="share-reddit"
      >
        <i class="fa-brands fa-reddit" aria-hidden="true"></i>
      </button>
    </abbr>
  </div>

  <div class="progress-container">
    <div class="progress-bar" id="myBar"></div>
  </div>
</div>
