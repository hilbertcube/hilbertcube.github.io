        margin-left: 0;
      }
      .image-container {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
        justify-content: center;
      }
      .food-img {
        width: calc(25% - 5px);
        max-width: 100%;
        height: auto;
        object-fit: cover;
      }
      .food {
        display: flex;
        flex-direction: row;
        gap: 3rem;
        -webkit-hyphens: auto;
        -moz-hyphens: auto;
        -ms-hyphens: auto;
        hyphens: auto;
        overflow-wrap: break-word;
        word-wrap: break-word;
      }
      .food > div {
        flex: 1;
      }
      h2.h3-visual {
        margin-top: 10px;
      }
      @media (max-width: 768px) {
        .food-img {
          width: calc(50% - 5px);
        }
        .food {
          flex-direction: column;
          gap: 0;
        }
      }
    </style>
  </Fragment>

  <!-- Sidebar: TOC + highlights -->
  <Fragment slot="sidebar">
    <div class="toc">
